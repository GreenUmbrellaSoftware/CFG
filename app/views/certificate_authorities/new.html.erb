<div class="container">
  <h1>New Certificate Authority</h1>

  <%= form_for(@certificate_authority) do |f| %>
    <% if @certificate_authority.errors.any? %>
      <div id="error_explanation">

        <h2><%= pluralize(@certificate_authority.errors.count, 'error') %> prohibited this certificate_authority from being saved:</h2>

        <ul>
          <% @certificate_authority.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :intermediate %>
      <%= f.text_area :intermediate, class: 'form-control', rows: 6 %>
    </div>

    <div class="form-group">
      <%= f.label :root %>
      <%= f.text_area :root, class: 'form-control', rows: 6 %>
    </div>

    <div class="actions">
      <%= f.submit 'Create Certificate Authority', class: 'btn btn-primary' %>
      <%= link_to 'Back', certificate_authorities_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>